#Wolumin root (domyślną wartością jest "@")
volume_root="@"

#Automatyczna aktualizacja plików startowych GRUB, dozwolone wartości to: yes|no.
update-grub=no

#Automatyczne generowanie migawek w momencie spełnienia warunków.
auto-run=no

#Utrzymuj na dysku ograniczoną ilość migawek, jeśli wartość zerowa, nie ograniczaj tej ilości.
snapshots_max=2

#Sposób wyzwalania tworzenia migawek (dostępne opcje: "cron.daily|cron.weekly|dpkg")
trigger="cron.weekly"
